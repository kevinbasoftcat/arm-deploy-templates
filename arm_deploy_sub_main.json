{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "principalId": {
            "type": "string",
            "defaultValue": "e0f7eedc-7499-4f50-8f0e-267ec74ff699",
            "metadata": {
                "description": "The principal to assign the role to"
            }

        },
        "subscriptionIds": {
            "type": "array",
            "defaultValue": [
                "5d4011c8-2533-482b-aab2-7eabc45f1ef1",
                "36d7aca8-1aa6-4cf3-b692-3f76cf17e1f0"
            ],
            "metadata": {
                "description": "The susbcription Ids to deploy"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "linkedTemplate",
            "subscriptionId": "[subscription().subscriptionId]",
            "location": "uksouth",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/kevinbasoftcat/arm-deploy-templates/main/arm_deploy_sub_perms_copy.json",
                    "contentVersion": "1.0.0.1"
                },
                "parameters": {
                    "principalId": {
                        "value": "[parameters('principalId')]"
                    },
                    "subscriptionIds": {
                        "value": "[parameters('subscriptionIds')]"
                    }
                },
                "outputs": {
                }
            },
            "copy": {
                "name": "linkDeploymentCopy",
                "count": "[length(parameters('subscriptionIds'))]"
            }
        }
    ]
}